    <!--</style>-->

    <style name="Theme.PSI.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.PSI.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.PSI" parent="Theme.AppCompat.DayNight.NoActionBar" >
        <item name="colorPrimary">@android:color/holo_orange_light</item>
        <item name="colorAccent">@android:color/holo_orange_dark</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
    </style>

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="spinner_style">
        <item name="android:layout_width">@dimen/spinner_width</item>
        <item name="android:layout_height">@dimen/spinner_height</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:popupBackground">#FFFFFFFF</item>
    </style>

    <style name="ExpandedCollapsingToolbar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="item_style" parent="android:TextAppearance.Medium">
        <item name="android:background">@drawable/round_corner_item</item>
        <item name="android:textColor">@color/colorCommonText</item>
        <item name="android:padding">@dimen/tv_detail_item_padding</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">@dimen/tv_detail_item_w</item>
        <item name="android:textAlignment">center</item>
    </style>

</resources>
